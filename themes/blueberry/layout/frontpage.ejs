<section class="section-intro mb-3 mb-lg-5">
	<div class="section-intro-mobile-bg">
		<%- partial('partial/navbar') %>
		<div class="jumbotron jumbotron-fluid jumbotron-blueberry">
			<div class="container">
				<div class="row">
					<div class="col-12 col-lg-6">
						<h1 class="display-4 pr-3"><%- site.data.jumbotron.heading || "" %></h1>
					</div>
				</div>
				<div class="row">
					<div class="col col-md-8 col-lg-6 col-xl-5 mb-3">
						<p class="front-paragraph mt-4"><%- site.data.jumbotron.subhead || "" %></p>
					</div>
				</div>
				<div class="row pb-4 pb-lg-0 pb-xl-4">
					<div class="col">
							<a href="<%- site.data.jumbotron.button.href || "" %>" class="my-2 btn btn-lg btn-primary rounded-pill mr-2">
								<%- site.data.jumbotron.button.text || "" %>
							</a>
							<br class="d-inline d-md-none"/>
							<span class="front-paragraph"><%- site.data.jumbotron.details || "" %></span>
						</div>
					</div>
				</div>
			</div>
			<img class="w-100 d-lg-none" alt="jumbotron section shape" src="<%- partial('data-uri/wave-header') %>" />
		</div>
	</div>
</section>
<section class="pb-4">
	<!-- Зачем работать на такси в бизнес-классе? -->
	<%- partial('partial/heading', {heading: site.data.why_work.heading}) %>
	<div class="container">
		<div class="row justify-content-center">
			<% for (var item in site.data.why_work.items) { %>
				<div class="col-xs-12 col-sm-6 col-lg-4 text-center mt-3">	
					<img class="w-25" src="<%- site.data.why_work.items[item].icon.src %>" alt="<%- site.data.why_work.items[item].icon.alt %>" />
					<p class="mt-3 px-md-3"><%- site.data.why_work.items[item].text %></p>
				</div>
			<% } %>
		</div>
	</div>
</section>
<section>
	<!-- Наши приемущества -->
	<%- partial('partial/heading', {heading: site.data.our_advantages.heading}) %>
	<div class="container">
		<ul class="row list-blueberry">
			<% for (var item in site.data.our_advantages.items) { %>
				<li class="col-xs-12 col-md-6 my-2 mt-lg-3">	
					<p class="font-size-21"><%- site.data.our_advantages.items[item] %></p>
				</li>
			<% } %>
		</ul>
	</div>
<section>
	<!-- Требования к водителю -->
	<%- partial('partial/heading', {heading: site.data.requirements.heading}) %>
	<div class="container">
		<div class="row justify-content-center">
			<% for (var item in site.data.requirements.items) { %>
				<div class="col-xs-12 col-sm-6 col-lg-4 text-center mt-3">	
					<img class="w-25" src="<%- site.data.requirements.items[item].icon.src %>" alt="<%- site.data.requirements.items[item].icon.alt %>" />
					<p class="lead mt-3 px-md-3"><%- site.data.requirements.items[item].text %></p>
				</div>
			<% } %>
		</div>
	</div>	
</section>
<section>
	<!-- Автомобиль в вашем распоряжении -->
	<%- partial('partial/heading', {heading: site.data.your_auto.heading}) %>
	<div class="container">
		<div class="row">	
			<div class="col">
				<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
						<ol class="carousel-indicators">
						<% for (var i=0; i<site.data.your_auto.images.length -1; i++) { %>
							<% if (i==0) { %>
								<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
							<% } %>
							<li data-target="#carouselExampleIndicators" data-slide-to="<%- i %>"></li>				
						<% } %>
					</ol>
					<div class="carousel-inner">
						<% for (var i=0; i<site.data.your_auto.images.length; i++) { %>
							<div class="carousel-item <%- i==0 ? 'active' : '' %>">
								<img src="<%- site.data.your_auto.images[i].src %>" class="d-block w-100" alt="<%- site.data.your_auto.images[i].alt %>">
							</div>
						<% } %>
					</div>
					<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row justify-content-center">	
			<div class="col-12">
				<h3 class="text-center my-4 h4"><%- site.data.your_auto.car.model %></h3>
			</div>
			<div class="col-xs-12 col-md-9 col-lg-6">
				<table class="table">
					<tbody>
						<% for (var item in site.data.your_auto.car.parameters) { %>
							<tr>
								<th scope="row"><%- site.data.your_auto.car.parameters[item].name %></th>
								<td><%- site.data.your_auto.car.parameters[item].value %></td>
							</tr>
						<% } %>
					</tbody>
				  </table>
			</div>
		</div>
	</div>
</section>
<section>
	<!-- Как арендовать автомобиль? -->
	<%- partial('partial/heading', {heading: site.data.how_to_rent.heading}) %>
	<div class="container">
