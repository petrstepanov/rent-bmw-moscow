	<!-- Ответы на вопросы -->
	<%- partial('partial/heading', {heading: site.data.faq.heading}) %>
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="card-columns">
					<% for (var item in site.data.faq.items) { %>
						<div class="card card-blueberry">
							<div class="card-body">
								<h3 class="card-title h5"><%- site.data.faq.items[item].title %></h3>
								<p class="card-text"><%- site.data.faq.items[item].text %></p>
							</div>
						</div>
					<% } %>		
				</div>		
			</div>
		</div>
	</div>
</section>